<h3>PanelForm</h3>

<EditForm Model="mioPannello" OnValidSubmit="Salva">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label for="marca">Marca Pannello Fotovoltaico</label>
        <InputText class="form-control" @bind-Value="@mioPannello.Marca" id="marca"></InputText>
        <ValidationMessage For="(()=>mioPannello.Marca)" />
    </div>
    <div class="form-group">
        <label for="peakPower">PeakPower Pannello Fotovoltaico</label>
        <InputNumber class="form-control" @bind-Value="@mioPannello.PeakPower" id="peakPower"></InputNumber>
        <ValidationMessage For="(()=>mioPannello.PeakPower)" />
    </div>
    <div class="form-group">
        <label for="modello">Modello Pannello Fotovoltaico</label>
        <InputText class="form-control" @bind-Value="@mioPannello.Modello" id="modello"></InputText>
        <ValidationMessage For="(()=>mioPannello.Modello)" />
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
</EditForm>

@code {
    [Parameter]
    public PannelloFV mioPannello { get; set; }
    [Parameter]
    public EventCallback Salva { get; set; }

}
